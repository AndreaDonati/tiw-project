<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>tiw-project-html</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/tiw-project-db</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>G1org1na</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
 <filter> 
  <filter-name>LoginChecker</filter-name> 
      <filter-class>it.polimi.tiw.filters.LoginChecker</filter-class> 
 </filter> 
 <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/Home</url-pattern> 
    <url-pattern>/getResults</url-pattern>
    <url-pattern>/inserisciVoti</url-pattern>
    <url-pattern>/pubblicaVoti</url-pattern>
    <url-pattern>/verbalizzaVoti</url-pattern>
    <url-pattern>/rifiutaVoti</url-pattern>
 </filter-mapping> 
 <filter> 
  <filter-name>AuthorizationChecker</filter-name> 
      <filter-class>it.polimi.tiw.filters.AuthorizationChecker</filter-class> 
 </filter> 
 <filter-mapping> 
    <filter-name>AuthorizationChecker</filter-name> 
    <url-pattern>/pubblicaVoti</url-pattern>
    <url-pattern>/inserisciVoti</url-pattern>
 </filter-mapping> 
 <filter> 
  <filter-name>StudentChecker</filter-name> 
      <filter-class>it.polimi.tiw.filters.StudentChecker</filter-class> 
 </filter> 
 <filter-mapping> 
    <filter-name>StudentChecker</filter-name> 
    <url-pattern>/rifiutaVoti</url-pattern>
 </filter-mapping> 
  <welcome-file-list>
    <welcome-file>indexHTML.html</welcome-file>
  </welcome-file-list>
</web-app>